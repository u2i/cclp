extends layout

mixin svgTitle(text, textLength, x1, x2, x3, x4, x5, x6)
  svg(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 320 80" width="320" height="80", class="sectionTitle")
    defs
      linearGradient(id="gradient" x1="0%" y1="0%" x2="0%" y2="100%")
        stop(offset="0%" style="stop-color: #387da9; stop-opacity:1")
        stop(offset="40%" style="stop-color: #d4d4d4; stop-opacity:1")
        stop(offset="42%" style="stop-color: #464151; stop-opacity:1")
        stop(offset="54%" style="stop-color: #744c7a; stop-opacity:1")
        stop(offset="80%" style="stop-color: #d7b0fb; stop-opacity:1")

    image(xlink:href="images/stroke.png" width="100" height="30" x="110" y="20")
    text(x="50%" y="35" textLength=textLength font-family="Orbitron" font-size="35" text-anchor="middle" fill="url(#gradient" stroke="rgba(0,0,0,0.36")=text
    image(xlink:href="images/sparkle.png" width="20" height="20" x=x1 y="14")
    image(xlink:href="images/sparkle.png" width="20" height="20" x=x2 y="14")
    image(xlink:href="images/sparkle.png" width="20" height="20" x=x3 y="14")
    image(xlink:href="images/sparkle.png" width="20" height="20" x=x4 y="14")
    image(xlink:href="images/sparkle.png" width="20" height="20" x=x5 y="14")
    image(xlink:href="images/sparkle.png" width="20" height="20" x=x6 y="14")

mixin svgBtn(text)
  svg(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 300 90" width="300" height="90", class="svgBtn")
    rect(class="btnStroke" x="30" y="5" width="240" stroke-width="5" height="80" stroke="#4c0909")
    text(class="shadow" x="152" y="67" transform="rotate(-5 0,50)" font-family="Rock Salt" fill="#4c0909" text-anchor="middle")=text
    text(x="150" y="65" transform="rotate(-5 0,50)" font-family="Rock Salt" text-anchor="middle")=text

mixin galleryItem(i)
  img(src="images/photos/coding-challenge-"+i+".jpg")


block content
  header
    nav
      a(href="#home") Home
      a(href="#about") About
      //- a(href="#events") Events
      a(href="#video") Video
      a(href="#register") Register
  main
    section#home.home
      .bgVideo
        video(loop muted autoplay poster="images/video-placeholder.jpg")
          source(src="images/videoBg.mp4" type="video/mp4")
      .u2i
        img(src="images/u2i-logo.png")
      .grid
        //- a(href="#")
        //-   +svgBtn("Register Now")

    section#about.about
      +svgTitle("About", 130, 87, 114, 140, 189, 500, 500)
        p
          | In times when anybody can become a programmer.
          br
          | When online courses can teach you webdev in a week.
          br
          | When people can write a fibonacci function under a minute.
          br
          | We decided to make programming great again.
          br
          | By making simple things hard again.
        p
          | Join us on a journey to the glorious 90's, when being a programmer was considered a hard job, Ace of Base ruled the charts and Java was the bleeding f*cking edge.
        p
          | Team up with 3 of your friends and face some of the easiest puzzles you can find in programing job interviews like reversing a string or deciding if it's a palindrome. But this time do it  within limited time, on a keyboard that makes funny noises and a screen that makes you think of that one time you took LSD because you thought it was candy.
        p
          | Get ready to go back to your highschool years and relive some of your worst nightmares like:
          br
          span letting your teammates down in a team based activity,
          br
          span getting your ass handed to you in a simple board game
          br
          span and being yelled at for failing at performing a seemingly simple task.
          br
          br
          | Or win the challenge and fulfill some of your biggest fantasies like:
          br
          span.orange actually winning in a team based activity,
          br
          abbr(title="* metaphorically")
            span.orange drinking wine from the skulls of your enemies
          sup *
          br
          span.orange and proving to everyone else that you're nerdier than the The Klingon Language Institute.
        p
          | Prepare for the challenge that will test your programming skills, reflexes and above all else your sanity and patience. So suit up, dust of your bat'leth and join us in the epic u2i Coding Challenge.


    //- section#events.events
    //-   +svgTitle("Events", 147, 78, 130, 153, 221, 500, 500)
    //-   .content
    //-     a#gallery.gallery
    //-       +galleryItem(5)

    section#video.video
      +svgTitle("Video", 115, 100, 134, 160, 205, 500, 500, 500)
      .content
        .video-container
          iframe.video(width=560, height=315,src="https://www.youtube.com/embed/U9MHU40-bps?ecver=1", frameborder=0, allowfullscreen="true")


    section#register.register
      +svgTitle("Register", 190, 57, 84, 109, 146, 197, 243)
      .content
        p
          | If you want to take part in this Epic Battle fill the form below
          br
          | or simply drop us a line at
          span.email
            |  cc@u2i.com
        #ty
          p
            | Your entry has been submited, we'll contact you soon.
        form#u2icc-form(method="POST", enctype="multipart/form-data")
          .members
            .form-group
              label(for="name") Introduce yourself *
              input(type="text", name="name", placeholder="What's your name", required)
              input(type="email", name="email", placeholder="What's your email", required)
          .form-group
            label(for="team") Do you have a team?
            input(type="text", name="team", placeholder="Team name")
          .form-group
            input(type="submit", value="Let's rumble!")
  footer
    | &copy; 2017 u2i LLC. All rights reserved.

